@page
@model AspnetRun.Web.Pages.Room.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<script>
        $(document).ready(function () {
            $("#btnsubmit").click(function (e) {
                var valdata = $("form").serialize();
                $.ajax({
                    url: "/api/v1/room/DeleteRoom",
                    type: "POST",
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data: valdata
                });
            });
        });

</script>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Building)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Building.BuildingName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Room.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

