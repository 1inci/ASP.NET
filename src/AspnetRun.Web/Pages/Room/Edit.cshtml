@model AspnetRun.Web.Pages.Room.EditModel

@{
    ViewData["Title"] = "Edit";
}
<script>
    var url = "https://localhost:44368/api/v1/room/UpdateRoom";

    $(document).ready(function () {
        $("#responseText").hide();
        $("form")
            .submit(function (event) {

                event.preventDefault();

                // fetch the form object
                $f = $(event.currentTarget);

                // check if form is valid
                if ($f.valid()) {
                    $("#responseText").show();
                    // fetch the action and method
                    var url = $f.attr("action");
                    var method = $f.attr("method");

                    if (method.toUpperCase() === "POST") {

                        // prepare the FORM data to POST
                        var data = new FormData(this);

                        // ajax POST
                        $.ajax({
                            url: url,
                            method: "POST",
                            data: data,
                            processData: false,
                            contentType: false,
                            success: handleResponse,
                            error: handleError,
                            complete: function (jqXHR, status) {
                                console.log(jqXHR);
                                console.log(status);
                                $f.trigger('reset');
                            }
                        });
                    }
                }
            });

        function handleResponse(res) {

            $("#responseText").show();
            $("#responseText").text("success");
            $("#responseText").show();
            setTimeout(() => {
                $("#responseText").hide();
            }, 5000);

        }

